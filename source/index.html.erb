meta:
  description: A Ruby on Rails developer from the UK's personal website. Showcases an overview of his skills and how to get in touch.
  index: true
---

<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "Person",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Berkshire, UK"
  },
  "email": "mailto:me@mikerogers.io",
    "image": "<%= root_url %><%= asset_path(:images, 'mike-rogers.jpg') %>",
  "jobTitle": "Ruby on Rails Developer",
  "name": "Mike Rogers",
  "url": "https://mikerogers.io",
  "sameAs" : [
    "https://twitter.com/MikeRogers0",
    "https://github.com/mikerogers0",
    "https://teamtreehouse.com/rmikerogers0",
    "https://www.reddit.com/user/Rogem002",
    "http://instagram.com/mikerogers0",
    "https://stackoverflow.com/users/445724/mikerogers0"
  ]
