    </div>
  </div>

</div>

<div class="blog-posts mb-5">
  <h2 class="text-center mb-4">Things I've written</h2>

  <% blog.articles[0..5].each do |article| %>
    <h3><%= link_to article.title, article %></h3>
    <p><%= article.data.meta.description %></p>

    <div class="text-muted small">
      <p>Posted on <time datetime="<%= article.date.strftime('%Y-%m-%d') %>"><%= article.date.strftime('%A %b %e, %Y') %></time></p>
    </div>
  <% end %>

  <%= link_to 'See all Posts', 'posts.html', class: 'btn btn-primary' %>
</div>
